<Page x:Class="ClienteMusAPI.Ventanas.Inicio.vtRegistroCuenta"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ClienteMusAPI.Ventanas.Inicio"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="MusAPI - Menú principal">

    <Grid Background="White" Margin="0,0,0,0">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,10,0,0">
            <!-- Label del título -->
            <Label Content="Registrar cuenta" HorizontalAlignment="Center" VerticalAlignment="Top" 
           FontSize="40"
           FontWeight="Bold"
           Margin="0,0,0,40"
           />
            <!-- Descripcion de la ventana -->
            <Label Content="Registro de un usuario con todos los campos comunes" HorizontalAlignment="Center" VerticalAlignment="Top" 
           FontSize="26"
           Margin="0,0,0,40"
           />
            <!-- Botones de navegación -->
            <Button Content="Registrar" Width="250" Height="50" Margin="0,0,0,10" FontSize="14"/>
            <Button Content="Cancelar" Width="250" Height="50" Margin="0,0,0,10" FontSize="14" Click="Click_Cancelar"/>
        </StackPanel>
    </Grid>
</Page>
