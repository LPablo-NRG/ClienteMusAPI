<Page x:Class="ClienteMusAPI.Ventanas.Busqueda.vtBusqueda"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ClienteMusAPI.Ventanas.Busqueda"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="MusAPI - Búsqueda">

    <Grid Background="White" Margin="0,0,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid x:Name="BarraBusqueda" VerticalAlignment="Top"
      Height="80" Grid.Row="0">
            <Grid.Resources>
                <!-- Declaro el brush con Key (no Name) -->
                <LinearGradientBrush x:Key="MovingBrush"
StartPoint="0,0" EndPoint="1,1">
                    <LinearGradientBrush.RelativeTransform>
                        <TranslateTransform />
                    </LinearGradientBrush.RelativeTransform>
                    <GradientStop Color="#98D2C0" Offset="0"/>
                    <GradientStop Color="#205781" Offset="1.0"/>
                </LinearGradientBrush>
            </Grid.Resources>
            <Grid.Background>
                <StaticResource ResourceKey="MovingBrush"/>
            </Grid.Background>
            <Grid.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation
               Storyboard.TargetName="BarraBusqueda"
               Storyboard.TargetProperty="(Background)
                                          .(LinearGradientBrush.RelativeTransform)
                                          .(TranslateTransform.X)"
               From="-.2" To="0.5"
               Duration="0:0:4"
               RepeatBehavior="Forever"
               AutoReverse="True"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Grid.Triggers>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <Grid Width="200" Grid.Column="0">
                <Button Grid.Column="0"
                        Width="40" Height="40"
                        VerticalAlignment="Center" HorizontalAlignment="Left"
                        Margin="10,0,100,0"
                        Click="Click_Volver"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        Cursor="Hand">
                    <Image Source="..\..\Recursos\Iconos\iconoRegresar.png"/>
                </Button>
            </Grid> 

            <Grid Grid.Column="1" VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="8*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="tbBusqueda" 
                     Height="40"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Stretch"
                     FontSize="18" Text="Buscar..." 
                     VerticalContentAlignment="Center" Foreground="#205781"   
                     BorderBrush="#98D2C0" BorderThickness="2"
                         Grid.Column="0"
                     /> 
                <Button Background="Transparent" BorderBrush="Transparent" Cursor="Hand"
                    Width="40" Height="40" VerticalAlignment="Center" HorizontalAlignment="Right"
                    Click="Click_BuscarContenido"
                    Grid.Column="0">
                    <Image  Source="..\..\Recursos\Iconos\iconoLupa.png" />
                </Button>
                <ComboBox Grid.Column="2" 
                          Foreground="#205781" FontSize="18" VerticalContentAlignment="Center"
                          SelectedIndex="0"  
                          Height="40" Cursor="Hand" FontWeight="DemiBold"  >
                    <ComboBoxItem Content="Cancion" />
                    <ComboBoxItem Content="Album" />
                    <ComboBoxItem Content="Artista" />
                    <ComboBoxItem Content="Usuario (Cambiar descripcion-CU)" />
                </ComboBox>
            </Grid>

            <Grid Width="200" Grid.Column="2">
                <Button Width="40" Height="40" Background="Transparent" BorderBrush="Transparent"
                        VerticalAlignment="Center" HorizontalAlignment="Right"
                        Margin="0,0,10,0" Grid.Column="2" Cursor="Hand"
                        Click="Click_VerPerfilUsuario">
                    <Image  Source="..\..\Recursos\Iconos\iconoPerfil.png" />
                </Button>
            </Grid> 

        </Grid>

        <Grid Grid.Row="1" Margin="0,20,0,20" VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Border CornerRadius="10" Background="#bfe3d8" Grid.Column="1">
                <ScrollViewer VerticalScrollBarVisibility="Hidden"  Margin="20,20,20,20">
                    <StackPanel x:Name="sp_Resultados" HorizontalAlignment="Stretch" 
                    VerticalAlignment="Top" >
                        <Label Content="Resultados" FontSize="40" HorizontalAlignment="Center"
                       Foreground="#205781" FontFamily="Century Gothic" FontWeight="Bold"/>

                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>

    </Grid>
</Page>
