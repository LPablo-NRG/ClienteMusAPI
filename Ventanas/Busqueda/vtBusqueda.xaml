<Page x:Class="ClienteMusAPI.Ventanas.Busqueda.vtBusqueda"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ClienteMusAPI.Ventanas.Busqueda"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="MusAPI - Búsqueda">

    <Grid Background="White" Margin="0,0,0,0">
        <Grid Background="#4F959D" VerticalAlignment="Top"
      Height="80" Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <Grid Width="200" Grid.Column="0">
                <Button Grid.Column="0"
                        Width="40" Height="40"
                        VerticalAlignment="Center" HorizontalAlignment="Left"
                        Margin="10,0,100,0"
                        Click="Click_Volver"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        Cursor="Hand">
                    <Image Source="..\..\Recursos\Iconos\iconoRegresar.png"/>
                </Button>
            </Grid> 

            <Grid Grid.Column="1" VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="8*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="tbBusqueda" 
                     Height="40"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Stretch"
                     FontSize="18" Text="Buscar..." 
                     VerticalContentAlignment="Center" Foreground="#205781"   
                     BorderBrush="#98D2C0" BorderThickness="2"
                         Grid.Column="0"
                     /> 
                <Button Background="Transparent" BorderBrush="Transparent" Cursor="Hand"
                    Width="40" Height="40" VerticalAlignment="Center" HorizontalAlignment="Right"
                    Click="Click_BuscarContenido"
                    Grid.Column="0">
                    <Image  Source="..\..\Recursos\Iconos\iconoLupa.png" />
                </Button>
                <ComboBox Grid.Column="2" 
                          Foreground="#205781" FontSize="18" VerticalContentAlignment="Center"
                          SelectedIndex="0"  
                          Height="40" Cursor="Hand" FontWeight="DemiBold"  >
                    <ComboBoxItem Content="Cancion" />
                    <ComboBoxItem Content="Album" />
                    <ComboBoxItem Content="Artista" />
                    <ComboBoxItem Content="Usuario (Cambiar descripcion-CU)" />
                </ComboBox>
            </Grid>

            <Grid Width="200" Grid.Column="2">
                <Button Width="40" Height="40" Background="Transparent" BorderBrush="Transparent"
                        VerticalAlignment="Center" HorizontalAlignment="Right"
                        Margin="0,0,10,0" Grid.Column="2" Cursor="Hand"
                        Click="Click_VerPerfilUsuario">
                    <Image  Source="..\..\Recursos\Iconos\iconoPerfil.png" />
                </Button>
            </Grid> 

        </Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,10,0,0">
            <!-- Descripcion de la ventana -->
            <Label Content="Aquí se enlistan los resultados (canciones, artistas, albumes).  Ejemplos:" HorizontalAlignment="Center" VerticalAlignment="Top" 
           FontSize="26"
           Margin="0,0,0,40"
           />
            
            <!-- Ejemplo Cancion-->
            <Grid Height="50" Margin="0,0,0,40" Background="LightGray" Width="600">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Label Content="Cancion - Artista" FontSize="14" VerticalAlignment="Center" Grid.Column="0"/>
                <Button Content="Guardar (CU-10)" Width="100" Height="30" FontSize="12" Grid.Column="1" Margin="10,0,0,0"/>
                <Button Content="Ver Detalles" Width="100" Height="30" FontSize="12" Grid.Column="2" Margin="10,0,0,0"/>
                <Button Content="Reproducir" Width="100" Height="30" FontSize="12" Grid.Column="3" Margin="10,0,10,0"/>
            </Grid>

            <!-- Ejemplo Album-->
            <Grid Height="50" Margin="0,0,0,40" Background="LightGray" Width="600">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Label Content="Album - Artista" FontSize="14" VerticalAlignment="Center" Grid.Column="0"/>
                <Button Content="Ver Detalles" Width="100" Height="30" FontSize="12" Grid.Column="1" Margin="10,0,0,0"/>
                <Button Content="Reproducir" Width="100" Height="30" FontSize="12" Grid.Column="2" Margin="10,0,10,0"/>
            </Grid>

            <!-- Ejemplo artista-->
            <Grid Height="50" Margin="0,0,0,40" Background="LightGray" Width="600">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Label Content= "Artista" FontSize="14" VerticalAlignment="Center" Grid.Column="0"/>
                <Button Content="Ver Perfil" Width="100" Height="30" FontSize="12" Grid.Column="2" Margin="10,0,10,0" Click="Click_VerPerfil"/>
            </Grid>
            
        </StackPanel>
    </Grid>
</Page>
