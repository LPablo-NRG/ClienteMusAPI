<Page x:Class="ClienteMusAPI.Ventanas.Menu.vtMenuPrincipal"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ClienteMusAPI.Ventanas.Menu"
      xmlns:userControls="clr-namespace:ClienteMusAPI.UserControls"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="1280"
      Title="MusAPI - Menú principal">

    <Grid x:Name="Fondo" Background="White">

        

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Grid x:Name="BarraBusqueda" VerticalAlignment="Top"
              Height="80" Grid.Row="0">
            <Grid.Resources>
                <!-- Declaro el brush con Key (no Name) -->
                <LinearGradientBrush x:Key="MovingBrush"
       StartPoint="0,0" EndPoint="1,1">
                    <LinearGradientBrush.RelativeTransform>
                        <TranslateTransform />
                    </LinearGradientBrush.RelativeTransform>
                    <GradientStop Color="#98D2C0" Offset="0"/>
                    <GradientStop Color="#205781" Offset="1.0"/>
                </LinearGradientBrush>
            </Grid.Resources>
            <Grid.Background>
                <StaticResource ResourceKey="MovingBrush"/>
            </Grid.Background>
            <Grid.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation
                      Storyboard.TargetName="BarraBusqueda"
                      Storyboard.TargetProperty="(Background)
                                                 .(LinearGradientBrush.RelativeTransform)
                                                 .(TranslateTransform.X)"
                      From="-.2" To="0.5"
                      Duration="0:0:4"
                      RepeatBehavior="Forever"
                      AutoReverse="True"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Grid.Triggers>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Grid Width="200" Grid.Column="0">
                <Button 
                    Width="40" Height="40"
                    VerticalAlignment="Center" HorizontalAlignment="Left"
                    Margin="10,0,100,0"
                    Click="Click_CerrarSesion"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Cursor="Hand">
                    <Image Source="..\..\Recursos\Iconos\iconoSalir.png" FlowDirection="RightToLeft" />
                </Button>
            </Grid> 

            <Grid Grid.Column="1" VerticalAlignment="Center">

                <TextBox x:Name="tbBusqueda"
             Height="40"
             VerticalAlignment="Center"
             HorizontalAlignment="Stretch"
             FontSize="18" Text="hola"
             VerticalContentAlignment="Center" Foreground="#205781"  
             BorderBrush="#98D2C0" BorderThickness="2"
             />

                <Button Background="Transparent" BorderBrush="Transparent" Cursor="Hand"
                    Width="40" Height="40" VerticalAlignment="Center" HorizontalAlignment="Right"
                        Click="Click_BuscarContenido">
                    <Image  Source="..\..\Recursos\Iconos\iconoLupa.png" />
                </Button>
            </Grid>

            <Grid Grid.Column="2" Width="200">
                <Button Width="40" Height="40" Background="Transparent" BorderBrush="Transparent"
                        VerticalAlignment="Center" HorizontalAlignment="Right"
                        Margin="100,0,10,0" Cursor="Hand"
                        Click="Click_VerPerfilUsuario">
                    <Image  Source="..\..\Recursos\Iconos\iconoPerfil.png" />
                </Button>
            </Grid> 
            
        </Grid> 
        
        <Grid x:Name="Album" Margin="0,20,0,20" Grid.Row="1" VerticalAlignment="Top">
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="8*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="8*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <Rectangle Fill="Black" Width="5" Grid.Column="2"/>
            <Border CornerRadius="10" Background="#bfe3d8" Grid.Column="1">
                <ScrollViewer VerticalScrollBarVisibility="Hidden" Grid.Column="1" Margin="20,20,20,20">
                    <StackPanel x:Name="sp_albumes" HorizontalAlignment="Stretch" 
VerticalAlignment="Top" >
                        <Label Content="Álbumes" FontSize="40" HorizontalAlignment="Center"
                               Foreground="#205781" FontFamily="Century Gothic" FontWeight="Bold"/>

                    </StackPanel>
                </ScrollViewer>
            </Border>

            <Border CornerRadius="10" Background="#bfe3d8" Grid.Column="3">
                <ScrollViewer VerticalScrollBarVisibility="Hidden" Grid.Column="3" Margin="20,20,20,20" >
                    <StackPanel x:Name="sp_listas" HorizontalAlignment="Stretch"  
                VerticalAlignment="Top" >
                        <Label Content="Listas" FontSize="40" HorizontalAlignment="Center"
                               Foreground="#205781" FontFamily="Century Gothic" FontWeight="Bold"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>
                
            
        </Grid>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Row="2" Orientation="Horizontal"
                    Margin="0,0,0,10">
            <Button Content="Crear Lista de reproducción (CU-4)" Width="250" Height="50" FontSize="14" Margin="0,0,5,0"/>
            <Button Content="Menú admins - admin" Width="250" Height="50" FontSize="14" Click="Click_MenuAdmin" Margin="5,0,0,0"/>

        </StackPanel>

    </Grid>
</Page>
