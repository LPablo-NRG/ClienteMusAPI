<Page x:Class="ClienteMusAPI.Ventanas.Menu.vtMenuPrincipal"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ClienteMusAPI.Ventanas.Menu"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="MusAPI - Menú principal">

    <Grid Margin="0,0,0,0">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,10,0,0">
            <!-- Label del título -->
            <Label Content="Menú Principal" HorizontalAlignment="Center" VerticalAlignment="Top" 
           FontSize="40"
           FontWeight="Bold"
           Margin="0,0,0,40"
           />
            <!-- Descripcion de la ventana -->
            <Label Content="ventana principal, desde aquí se ven listas y albumes guardados, solo deber haber un botón de ver perfil " HorizontalAlignment="Center" VerticalAlignment="Top" 
           FontSize="26"
           Margin="0,0,0,40"
           />
            <!-- Botones de navegación -->
            <Button Content="Buscar contenido (CU-3)" Width="250" Height="50" Margin="0,0,0,10" FontSize="14" Click="Click_BuscarContenido"/>
            <Button Content="Crear Lista de reproducción (CU-4)" Width="250" Height="50" Margin="0,0,0,10" FontSize="14" />
            <Button Content="Subir Canción (CU-6) - artista" Width="250" Height="50" Margin="0,0,0,10" FontSize="14" />
            <Button Content="Ver Perfil - artista" Width="250" Height="50" Margin="0,0,0,10" FontSize="14" Click="Click_VerPerfilArtista" />
            <Button Content="Ver Perfil - usuario" Width="250" Height="50" Margin="0,0,0,10" FontSize="14" Click="Click_VerPerfilUsuario" />
            <Button Content="Menú admins - admin" Width="250" Height="50" Margin="0,0,0,10" FontSize="14" Click="Click_MenuAdmin"/>
        </StackPanel>
    </Grid>
</Page>
