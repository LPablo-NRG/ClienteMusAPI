<Page x:Class="ClienteMusAPI.Ventanas.Menu.vtMenuAdmin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ClienteMusAPI.Ventanas.Menu"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="MusAPI - Menú principal">

    <Grid Background="White" Margin="0,0,0,0">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,10,0,0">
            <!-- Label del título -->
            <Label Content="Menú Admin" HorizontalAlignment="Center" VerticalAlignment="Top" 
                   FontSize="40"
                   FontWeight="Bold"
                   Margin="0,0,0,40"
                   />
            <!-- Descripcion de la ventana -->
            <Label Content="Aquí sólo entran los administradores" HorizontalAlignment="Center" VerticalAlignment="Top" 
                   FontSize="26"
                   Margin="0,0,0,40"
                   />
            <!-- Botones de navegación -->
            <Button Content="Categorías musicales (CU 13 y 14)" Width="250" Height="50" Margin="0,0,0,10" FontSize="14"/>
            <Button Content="Reportes (CU-15)" Width="250" Height="50" Margin="0,0,0,10" FontSize="14"/>
            <Button Content="Volver" Width="250" Height="50" Margin="0,0,0,10" FontSize="14" Click="Click_Volver"/>
        </StackPanel>
    </Grid>
</Page>
