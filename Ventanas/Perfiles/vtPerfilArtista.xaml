<Page x:Class="ClienteMusAPI.Ventanas.Perfiles.vtPerfilArtista"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ClienteMusAPI.Ventanas.Perfiles"
      mc:Ignorable="d" 
            d:DesignHeight="720" d:DesignWidth="1280"
      Title="MusAPI - Perfil Artista">

    <Grid Background="White" Margin="0,0,0,0">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,10,0,0">
            <!-- Label del título -->
            <Label Content="Perfil de Artista" HorizontalAlignment="Center" VerticalAlignment="Top" 
                   FontSize="40"
                   FontWeight="Bold"
                   Margin="0,0,0,40"
                   />
            <!-- Descripcion de la ventana -->
            <Label Content="Muestra datos del artista, sus canciones y álbumes de la misma forma que en la búsqueda" HorizontalAlignment="Center" VerticalAlignment="Top" 
                   FontSize="26"
                   Margin="0,0,0,20"
                   />
            <!-- Botones de navegación -->
            <Label Content="Si es tu propio perfil:" HorizontalAlignment="Center" VerticalAlignment="Top" 
                   FontSize="14"
                   Margin="0,0,0,10"
                   />
            <Button Content="Editar Perfil (CU-2) - " Width="250" Height="50" Margin="0,0,0,10" FontSize="14"/>
            <Button Content="Editar contenido (CU-7)" Width="250" Height="50" Margin="0,0,0,10" FontSize="14"/>
            <Button Content="Ver estadísticas de contenido (CU-8)" Width="250" Height="50" Margin="0,0,0,10" FontSize="14"/>
            <Button Content="ver estadísticas de consumo (CU-9)" Width="250" Height="50" Margin="0,0,0,10" FontSize="14"/>
            <Button Content="Subir Canción (CU-6) - artista" Width="250" Height="50" Margin="0,0,0,20" FontSize="14" />

            <Label Content="Si es un perfil ajeno:" HorizontalAlignment="Center" VerticalAlignment="Top" 
                FontSize="14"
                Margin="0,0,0,10"
                />
            <Button Content="Evaluar Artista (CU-5) - " Width="250" Height="50" Margin="0,0,0,40" FontSize="14"/>
            
            <Button Content="Volver" Width="250" Height="50" Margin="0,0,0,10" FontSize="14" Click="Click_Volver"/>
        </StackPanel>
    </Grid>
</Page>
