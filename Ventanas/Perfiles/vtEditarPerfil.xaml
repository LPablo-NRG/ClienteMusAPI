<Page x:Class="ClienteMusAPI.Ventanas.Perfiles.vtEditarPerfil"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ClienteMusAPI.Ventanas.Perfiles"
                  mc:Ignorable="d" 
            d:DesignHeight="720" d:DesignWidth="1280"
      Title="MusAPI - Editar Perfil ">

    <Grid Background="Transparent" Margin="0,0,0,0">
        <ScrollViewer VerticalScrollBarVisibility="Hidden">
            <StackPanel x:Name="sp_perfil" HorizontalAlignment="Stretch"  VerticalAlignment="Top" FlowDirection="LeftToRight">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" CornerRadius="10" BorderBrush="Black" BorderThickness="0"  
                        Margin="20,10,20,10" VerticalAlignment="Center" Padding="10">
                        <Border.Background>
                            <SolidColorBrush Color="{StaticResource ColorFondoHEX}" Opacity="{StaticResource OpacityConstante}"/>
                        </Border.Background>
                        <Grid VerticalAlignment="Top">
                            <Grid Grid.Row="1" Margin="0,10,0,10">
                                <Grid >
                                    <Button Grid.Column="0"
    Width="40" Height="40"
    VerticalAlignment="Top" HorizontalAlignment="Left"
    Margin="10,0,100,0"
    Click="Click_Volver"
    Background="Transparent"
    BorderBrush="Transparent"
    Cursor="Hand">
                                        <Image Source="..\..\Recursos\Iconos\iconoRegresar.png"/>
                                    </Button>
                                    <Label Content="Editar perfil" HorizontalAlignment="Center" 
                                           FontSize="{StaticResource TamanoFuenteTitulo}" Foreground="{StaticResource ColorLetrasHEX}"
                                           FontFamily="{StaticResource FuentePrincipal}" FontWeight="Bold"/>
                                    
                                </Grid>

                            </Grid>
                        </Grid>
                    </Border>


                    <Grid Grid.Row="2" VerticalAlignment="Stretch">

                        <Grid x:Name="Album" Grid.Row="1" VerticalAlignment="Top">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border CornerRadius="10" Grid.Column="1" Margin="20,10,20,10">
                                <Border.Background>
                                    <SolidColorBrush Color="{StaticResource ColorFondoHEX}" Opacity="{StaticResource OpacityConstante}"/>
                                </Border.Background>
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0">

                                    <!-- campos -->
                                    <Label Content="Nombre de Perfil" HorizontalAlignment="Center" VerticalAlignment="Top" 
                                           FontSize="20" 
                                           FontWeight="DemiBold"
                                           Foreground="{StaticResource ColorLetrasHEX}" 
                                           />
                                    <TextBox x:Name="txb_Nombre" Width="300" Height="30" Margin="0,0,0,0" MaxLength="100"
                                             FontSize="16" 
                                             Background="White"
                                             FontFamily="lucida sans"
                                             VerticalContentAlignment="Center"
                                             Foreground="{StaticResource ColorLetrasHEX}" 
                                             BorderBrush="#4F959D" BorderThickness="2"
                                             />
                                    <Label x:Name="lbl_ErrorUsuario" Foreground="{StaticResource ColorLetrasHEX}" Content="Este es el nombre público de tu perfil" HorizontalContentAlignment="Center" FontSize="14" Visibility="Visible"/>
                                    <Label Content="País" HorizontalAlignment="Center" VerticalAlignment="Top" 
           FontSize="20" 
           FontWeight="DemiBold"
           Foreground="{StaticResource ColorLetrasHEX}" 
           />
                                    <ComboBox x:Name="cb_pais" Width="200" Height="30" Margin="0,0,0,40" 
              FontSize="16" 
              DisplayMemberPath="Nombre"
              SelectedValuePath="Codigo"
              Style="{StaticResource ComboBoxGenerico}"
              
              />

                                    <!-- Botones de navegación -->
                                    <Button Style="{StaticResource BotonGenerico}" Content="Confirmar"
            Margin="0,10,0,10" 
            Click="Click_Confirmar"
            Width="250"
            />

                                </StackPanel>
                            </Border>
                        </Grid>
                    </Grid>
                </Grid>
            </StackPanel>
        </ScrollViewer>


    </Grid>
</Page>
