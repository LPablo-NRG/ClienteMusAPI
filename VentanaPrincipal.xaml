<Window x:Class="ClienteMusAPI.VentanaPrincipal"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                xmlns:local="clr-namespace:ClienteMusAPI"
                WindowState="Maximized"
                
                Title="MusAPI" Height="720" Width="1280">
    <Grid Background="#bfe3d8">
        
        <Grid x:Name="Fondo">
            <Grid.Resources>
                <LinearGradientBrush x:Key="MovingBrush"
                                     StartPoint="0,0" EndPoint="1,1" 
                                     Opacity="7">
                    <LinearGradientBrush.RelativeTransform>
                        <TranslateTransform />
                    </LinearGradientBrush.RelativeTransform>
                    <GradientStop Color="#98D2C0" Offset="0"/>
                    <GradientStop Color="{StaticResource ColorFondoAmarillaHEX}" Offset="1.3"/>
                </LinearGradientBrush>
            </Grid.Resources>
            <Grid.Background>
                <StaticResource ResourceKey="MovingBrush"/>
            </Grid.Background>
            <Grid.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation
               Storyboard.TargetName="Fondo"
               Storyboard.TargetProperty="(Background)
                                          .(LinearGradientBrush.RelativeTransform)
                                          .(TranslateTransform.X)"
               From=".2" To="0.5"
               Duration="0:0:4"
               RepeatBehavior="Forever"
               AutoReverse="True"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Grid.Triggers>
        </Grid>
        
        <Grid x:Name="Contenido" >
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <Grid x:Name="Reproductor" Grid.Row="1" Height="74" Margin="0,10,0,0">
                <Grid.Background>
                    <SolidColorBrush Color="{StaticResource ColorFondoHEX}" Opacity="{StaticResource OpacityConstante}"/>
                </Grid.Background>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>



                

                <StackPanel Orientation="Horizontal" Grid.Column="0" >
                    <Image x:Name="img_Cancion" Source="Recursos/Iconos/iconoDisco.png" Width="64" Height="64" Margin="10,0,10,0"/>
                    <StackPanel >
                        <TextBlock x:Name="txb_Cancion" Text="Nombre de la Canción pero de repente le pongo mas" 
                                   FontFamily="{StaticResource FuentePrincipal}" FontSize="{StaticResource TamanoFuenteCuerpo}"
                                   Margin="0,16,0,0" FontWeight="Bold" TextTrimming="CharacterEllipsis" TextWrapping="NoWrap" MaxWidth="280"/>
                        <TextBlock x:Name="txb_Artista" Text="Nombre del Artista" 
                                   FontFamily="{StaticResource FuentePrincipal}" FontSize="{StaticResource TamanoFuenteCuerpo}"/>
                    </StackPanel>
                </StackPanel>
                
                <StackPanel Grid.Column="1">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,10,0,0">
                        <TextBlock x:Name="txb_TiempoActual" Text="0:00" 
                                   FontFamily="{StaticResource FuentePrincipal}" FontSize="{StaticResource TamanoFuenteCuerpo}"/>
                        <Slider x:Name="sld_Tiempo"
        Width="400" Height="20" Margin="10,0"
        Minimum="0" Maximum="100" Value="0"
        VerticalAlignment="Center" HorizontalAlignment="Left" IsMoveToPointEnabled="True">
                            <Slider.Style>
                                <Style TargetType="Slider">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Slider">
                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                    </Grid.RowDefinitions>

                                                    <Track x:Name="PART_Track"
                                   Grid.Row="0"
                                   Maximum="{TemplateBinding Maximum}"
                                   Minimum="{TemplateBinding Minimum}"
                                   Value="{TemplateBinding Value}"
                                   IsDirectionReversed="False">
                                                        <Track.DecreaseRepeatButton>
                                                            <RepeatButton Height="4" Background="Black" BorderBrush="Black"/>
                                                        </Track.DecreaseRepeatButton>
                                                        <Track.Thumb>
                                                            <Thumb Width="10" Height="20" Background="Black" BorderBrush="Black"/>
                                                        </Track.Thumb>
                                                        <Track.IncreaseRepeatButton>
                                                            <RepeatButton Height="4" Background="DarkGray" BorderBrush="DarkGray"/>
                                                        </Track.IncreaseRepeatButton>
                                                    </Track>
                                                </Grid>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Slider.Style>
                        </Slider>

                        <TextBlock x:Name="txb_Duracion" Text="0:00" 
                                   FontFamily="{StaticResource FuentePrincipal}" FontSize="{StaticResource TamanoFuenteCuerpo}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal"
HorizontalAlignment="Center" VerticalAlignment="Center"
Grid.Column="2">


                        <Button Grid.Column="2"
    Width="40" Height="40"
    VerticalAlignment="Center" HorizontalAlignment="Center"

    Background="Transparent"
    BorderBrush="Transparent"
    Cursor="Hand">
                            <Image Source="Recursos\Iconos\iconoReproducir.png" />
                        </Button>
                        <Button Grid.Column="2"
    Width="40" Height="40"
    VerticalAlignment="Center" HorizontalAlignment="Center"

    Background="Transparent"
    BorderBrush="Transparent"
    Cursor="Hand">
                            <Image Source="Recursos\Iconos\iconoPausa.png" />
                        </Button>
                        <Button Grid.Column="2"
    Width="40" Height="40"
    VerticalAlignment="Center" HorizontalAlignment="Center"

    Background="Transparent"
    BorderBrush="Transparent"
    Cursor="Hand">
                            <Image Source="Recursos\Iconos\iconoSiguiente.png" />
                        </Button>
                        <Button Grid.Column="2"
    Width="40" Height="40"
    VerticalAlignment="Center" HorizontalAlignment="Center"

    Background="Transparent"
    BorderBrush="Transparent"
    Cursor="Hand">
                            <Image Source="Recursos\Iconos\iconoVolumen.png" />
                        </Button>
                    </StackPanel>
                </StackPanel>
            </Grid>

            
            <Frame x:Name="MarcoPrincipal" NavigationUIVisibility="Hidden" Grid.Row="0"
           HorizontalAlignment="Stretch"
           VerticalAlignment="Stretch" />
        </Grid>
    </Grid>
    
</Window>
