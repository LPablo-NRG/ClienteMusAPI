<UserControl x:Class="ClienteMusAPI.UserControls.Contenido"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ClienteMusAPI.UserControls"
             mc:Ignorable="d"  >
    <Border CornerRadius="10" BorderBrush="#4F959D" BorderThickness="2" Background="#ffffff" 
        Padding="0" Margin="0,10,0,10" >
        <Grid   Margin="0,10,0,10"  >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/> 
            </Grid.ColumnDefinitions>
            <Image x:Name="img_foto" Grid.Column="0" Width="64" Height="64" Margin="10,0,10,0"/>
            <Rectangle Fill="Black" Width="64" Height="64" Margin="10,0,10,0"/>
            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                <TextBlock x:Name="txb_Nombre" Text="Album/Cancion/Artista/Lista" FontSize="18" VerticalAlignment="Center" Grid.Column="1" Margin="0,0,0,2"
                           FontWeight="Bold" Foreground="#4F959D"/>
                <TextBlock x:Name="txb_Autor" Text="- Artista" FontSize="18" VerticalAlignment="Center" 
                           Grid.Column="1" Margin="0,2,0,0" Foreground="#4F959D"/>
            </StackPanel>

            <StackPanel Grid.Column="2" VerticalAlignment="Center" Margin="10,0,10,0">
                <Button x:Name="btn_Guardar" Style="{StaticResource BotonGenerico}" Content="Guardar" Grid.Column="2"
                        Width="100" Height="30" FontSize="14" Margin="0,0,0,10"
                        Click="Click_Guardar"
                        />
                <Button x:Name="btn_VerDetalles" Style="{StaticResource BotonGenerico}" Content="Ver Detalles" Grid.Column="3"
                        Width="100" Height="30" FontSize="14"
                        Click="Click_VerDetalles"
                        />
            </StackPanel>
            
            <Button x:Name="btn_Reproducir" Grid.Column="3" Margin="0,0,10,0"
                    Width="40" Height="40"
                    VerticalAlignment="Center" HorizontalAlignment="Center"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Cursor="Hand"
                    Click="Click_Reproducir">
                <Image Source="..\Recursos\Iconos\iconoReproducir.png" />
            </Button>
        </Grid>
    </Border>
</UserControl>
